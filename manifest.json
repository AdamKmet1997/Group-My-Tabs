{
    "manifest_version": 3,
    "name": "Group My Tabs",
    "version": "1.0",
    "description": "Group tabs by domain in Chrome with one click, enhancing built-in functionality for organized browsing.",
    "permissions": [
        "tabs",
        "tabGroups"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/ball.png",
            "48": "images/ball2.jpg",
            "128": "images/ball3.png"
        }
    }
}
